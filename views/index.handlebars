<div id="container">
  <h1>Eat Bob's Burgers!</h1>
  <img src="https://static.next-episode.net/tv-shows-images/huge/bobs-burgers.jpg">



  <div class="row">
    <div class="col-lg-6">

      <h2>Burgers Du Jour</h2>

      <ul>
        {{#each burgers}} {{#unless devour}} {{> burgerButton devour=true}} {{/unless}} {{/each}}
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-6">

      <h2>Burger Heaven</h2>

      <ul>
        {{#each burgers}} {{#if devour}} {{> burgerButton devour=false}} {{/if}} {{/each}}
      </ul>
    </div>
  </div>

  <div class="row">
    <div class="col-lg">

      <h2>Add a Burger</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="bb">Burger Name:</label>
          <input type="text" id="bb" name="name">
        </div>

        <button type="submit">Add Burger</button>
      </form>
    </div>
  </div>
</div>

